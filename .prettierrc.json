{
  "singleQuote": true,
  "semi": true,
  "useTabs": false,
  "tabWidth": 2,
  "trailingComma": "all",
  "printWidth": 100,
  "endOfLine": "lf",
  "importOrder": [
    "^((?!/).)*$",
    "^(@|pages)(.*|$)",
    "^(@|actions/)(.*|$)",
    "^(@|reducers/)(.*|$)",
    "^(@|store/)(.*|$)",
    "^(@|hooks)(.*|$)",
    "^(@|components/@common)(.*|$)",
    "^(@|components)(.*|$)",
    "^(@|styles)(.*|$)",
    "^(@|(assets|constants|lib|api))(.*|$)",
    "^(@|.)(.*|$)",
    "^(@|..)(.*|$)"
  ],
  "importOrderSeparation": true
}
